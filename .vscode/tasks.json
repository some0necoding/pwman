{
    "tasks": [
        {
            "type": "shell",
            "label": "remove files",
            "command": "/usr/bin/rm",
            "args": [
                "accounts.list",
                "crypto.salt",
                "login.hash",
                "passwords.list"
            ],
            "options": {
                "cwd": "${fileDirname}/config_files/"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "create files",
            "command": "/usr/bin/touch",
            "args": [
                "accounts.list",
                "crypto.salt",
                "login.hash",
                "passwords.list"
            ],
            "options": {
                "cwd": "${fileDirname}/config_files/"
            },
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "passwordmanager.c",
                "headers_source/*",
                "-o",
                "passman",
                "-lsodium"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger.",
            "dependsOn": ["remove files", "create files"],
            "dependsOrder": "sequence"
        }
    ],
    "version": "2.0.0"
}